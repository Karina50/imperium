@model Imperium.Models.Casa



<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/fontawesome.css" />
</head>


<div class="contact wow fadeInUp">
    <div class="container">
        <div class="section-header text-center">
            <h2 style="text-align:center;">Formulario para registrar casa</h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="contact-info">
                    <div class="contact-item">
                        <i class="flaticon-address"></i>
                        <div class="contact-text">
                            <h2>Sube la mejor foto que tengas.</h2>
                            <p>Ella describirá la casa.</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="flaticon-call"></i>
                        <div class="contact-text">
                            <h2>Se claro, creativo y preciso.</h2>
                            <p>Usa nombres cortos pero llamativos.</p>
                        </div>
                    </div>
                    <div class="contact-item">
                        <i class="flaticon-send-mail"></i>
                        <div class="contact-text">
                            <h2>La superficie son medidas.</h2>
                            <p>Se muy claro con ellas</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="contact-form">
                    <div id="success"></div>
                    <div class="row">
                        <div class="right-content">
                            <div class="container">
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="col-md-12">
                                        <fieldset>
                                            <label asp-for="Nombre" class="control-label">Nombre:</label>
                                            <input asp-for="Nombre" class="form-control" type="text" placeholder="Escriba su nombre" required="" />
                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                        </fieldset>
                                    </div>
                                    <br />
                                    <div class="col-md-12">
                                        <fieldset>
                                            <label asp-for="Precio" class="control-label">Precio:</label>
                                            <input asp-for="Precio" class="form-control" />
                                            <span asp-validation-for="Precio" class="text-danger"></span>
                                        </fieldset>
                                    </div>
                                    <br />
                                    <div class="col-md-12">
                                        <fieldset>
                                            <label asp-for="DescripcionPropiedad" class="control-label">Descripcion de la propiedad:</label>
                                            <input asp-for="DescripcionPropiedad" class="form-control" />
                                            <span asp-validation-for="DescripcionPropiedad" class="text-danger"></span>
                                        </fieldset>
                                    </div>
                                    <br />
                                    <div class="col-md-12">
                                        <fieldset>
                                            <select asp-for="RentaOventa" class="form-select form-select-lg form-control" aria-label=".form-select-lg example">
                                                <option selected>Selecciona:</option>
                                                <option value="Renta">Renta</option>
                                                <option value="Venta">Venta</option>
                                            </select>
                                        </fieldset>
                                    </div>
                                    <br />
                                    <div class="col-md-12">
                                        <fieldset>
                                            <select asp-for="TipoVivienda" class="form-select form-select-lg form-control" aria-label=".form-select-lg example">
                                                <option selected>Selecciona:</option>
                                                <option value="Departamento">Departamento</option>
                                                <option value="Casa">Casa</option>
                                                <option value="Terreno">Terreno</option>
                                                <option value="Comercial">Comercial</option>
                                                <option value="Oficina">Oficina</option>

                                            </select>
                                        </fieldset>
                                    </div>
                                    <br />
                                    <div class="col-md-12">
                                        <fieldset>
                                            <label asp-for="Superficie" class="control-label">Superficie:</label>
                                            <input asp-for="Superficie" class="form-control" />
                                            <span asp-validation-for="Superficie" class="text-danger"></span>
                                        </fieldset>
                                    </div>
                                    <br />
                                    <div class="col-md-12">
                                        <fieldset>
                                            <label asp-for="Caracteristicas" class="control-label">Caracteristicas:</label>
                                            <input asp-for="Caracteristicas" class="form-control" />
                                            <span asp-validation-for="Caracteristicas" class="text-danger"></span>
                                        </fieldset>
                                    </div>
                                    <br />
                                    <div class="col-md-12">
                                        <fieldset>
                                            <label asp-for="Coordenadas" class="control-label">Coordenadas:</label>
                                            <input asp-for="Coordenadas" class="form-control" />
                                            <span asp-validation-for="Coordenadas" class="text-danger"></span>
                                        </fieldset>
                                    </div>
                                    <br />
                                    <div class="col-md-12">
                                        <fieldset>
                                            <label asp-for="Imagen" class="control-label">Imagen:</label>
                                            <input type="file" name="archivo" asp-for="Imagen" class="form-control" />
                                            <span asp-validation-for="Imagen" class="text-danger"></span>
                                        </fieldset>
                                    </div>



                                    <br />
                                    <div class="col-md-12">
                                        <fieldset>
                                            <!-- <a class="btn" href="/Contactoes/Create">Conoce más</a>-->
                                            <button type="submit" value="Create" id="form-submit" class="btn">
                                                Registrar
                                            </button>
                                        </fieldset>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
                }


