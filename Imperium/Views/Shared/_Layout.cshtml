<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Home"] - ImperiumWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/fontawesome.css" />
    <link rel="stylesheet" href="~/assets/css/tooplate-style.css" />
    <link rel="stylesheet" href="~/assets/css/owl.css" />
    <link rel="stylesheet" href="~/assets/css/lightbox.css" />

</head>


<body>

    <div id="page-wraper">
        <!-- Sidebar Menu -->
        <div class="responsive-nav">
            <i class="fa fa-bars" id="menu-toggle"></i>
            <div id="menu" class="menu">
                <i class="fa fa-times" id="menu-close"></i>
                <div class="container">
                    <div class="image">
                        <a href="#"><img src="~/assets/images/logo-image.jpg" alt="Blugoon by Tooplate" /></a>
                    </div>
                    <div class="author-content">
                        <h4>IMPERIUM</h4>
                        <span>Menu de la pagina</span>
                    </div>
                    <nav class="main-nav">
                        <ul class="main-menu">

                            @{
                                @using Microsoft.AspNetCore.Http;

                                if (string.IsNullOrEmpty(Context.Session.GetString("Sesion1")))
                                {
                                    @Html.Raw("No hay sesion abierta");
                                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                                    <li><a asp-area="" asp-controller="Contactoes" asp-action="Create">Contacto</a></li>
                                    <li><a asp-area="" asp-controller="Catalogo" asp-action="Index">Catalogo de las casas</a></li>
                                    <li><a asp-area="" asp-controller="Sesion" asp-action="Index">Inicio Sesion</a></li>

                                }
                                else
                                {
                                    @Html.Raw("Bienvenido : " + Context.Session.GetString("Sesion1"));

                                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                                        <li><a asp-area="" asp-controller="Contactoes" asp-action="Create">Contacto</a></li>
                                        <li><a asp-area="" asp-controller="RegistroUsers" asp-action="Create">Registro Usuario</a></li>
                                        <li><a asp-area="" asp-controller="Casas" asp-action="Index">Panel de administracion de las casas</a></li>
                                        <li><a asp-area="" asp-controller="Catalogo" asp-action="Index">Catalogo de las casas</a></li>
                                        <li><a asp-area="" asp-controller="Sesion" asp-action="LogOut">Cerrar Sesion</a></li>
                                    
                                    }

                                }
                            
                        </ul>
                    </nav>
                    <div class="social-network">
                        <ul class="soial-icons">
                            <li>
                                <a href="#"><i class="fa fa-facebook"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-linkedin"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-dribbble"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-rss"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="copyright-text">
                        <p>
                            Copyright 2020 Blugoon<br>
                            Fernando Tziu <br> Karina Moo <br> Miguel Correa
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - Imperium - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>*@
        <!--</footer>-->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

